<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ingredient_item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="3dp"
    android:background="#ffffff">
    <TextView
        android:id="@+id/ingredient_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/ingredient_item_delete"
        android:text="New Ingredient"
        android:padding="20dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/ingredient_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ingredient_item_name"
        android:layout_alignBottom="@id/ingredient_item_name"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:tint="#aaaaaa"
        />

</RelativeLayout>